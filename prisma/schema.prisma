generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coach {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  authProviderId  String   @map("auth_provider_id")
  players         Player[]
  lessons         Lesson[]
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
}

model Player {
  id        String   @id @default(uuid())
  coachId   String   @map("coach_id")
  name      String
  email     String?  @unique
  status    PlayerStatus @default(active)
  coach     Coach    @relation(fields: [coachId], references: [id], onDelete: Cascade)
  lessons   Lesson[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Lesson {
  id         String   @id @default(uuid())
  coachId    String   @map("coach_id")
  playerId   String   @map("player_id")
  date       DateTime
  category   String
  notes      String?
  coach      Coach    @relation(fields: [coachId], references: [id], onDelete: Cascade)
  player     Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  media      MediaAsset[]
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
}

model MediaAsset {
  id                     String    @id @default(uuid())
  lessonId               String    @map("lesson_id")
  type                   MediaType
  googleDriveFileId      String    @map("google_drive_file_id")
  googleDriveWebViewLink String    @map("google_drive_web_view_link")
  mirroredObjectStoreUrl String?   @map("mirrored_object_store_url")
  durationSeconds        Int?      @map("duration_seconds")
  lesson                 Lesson    @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  createdAt              DateTime  @default(now()) @map("created_at")
  updatedAt              DateTime  @updatedAt @map("updated_at")
}

enum PlayerStatus {
  active
  inactive
}

enum MediaType {
  video
  image
}

enum Role {
  coach
  player
}

model ApiToken {
  id         String   @id @default(uuid())
  token      String   @unique
  role       Role
  subjectId  String   @map("subject_id")
  createdAt  DateTime @default(now()) @map("created_at")
}

