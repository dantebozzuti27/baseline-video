generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // For Supabase/Vercel: use a direct (non-pooler) connection for migrations.
  // Supabase provides a "Direct connection" string; set it as DIRECT_URL.
  directUrl = env("DIRECT_URL")
}

// -----------------------------
// Product entities (mandatory)
// -----------------------------

model Coach {
  id             String  @id @default(cuid())
  authUserId     String  @unique // Supabase auth.users.id (uuid as string)
  name           String
  email          String  @unique
  authProviderId String? // optional external/provider id (legacy/optional)
  players Player[]
  lessons Lesson[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PlayerStatus {
  active
  inactive
}

model Player {
  id      String       @id @default(cuid())
  coachId String
  authUserId String?   @unique // Supabase auth.users.id (nullable until player claims account)
  name    String
  email   String?
  status  PlayerStatus @default(active)

  coach   Coach              @relation(fields: [coachId], references: [id], onDelete: Cascade)
  lessons Lesson[]
  tokens  PlayerAccessToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([coachId])
}

model Lesson {
  id       String   @id @default(cuid())
  coachId  String
  playerId String
  date     DateTime
  category String
  notes    String?

  coach  Coach  @relation(fields: [coachId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  media  MediaAsset[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([coachId])
  @@index([playerId])
  @@index([coachId, playerId, date])
}

enum MediaType {
  video
  image
}

model MediaAsset {
  id                     String   @id @default(cuid())
  lessonId               String
  type                   MediaType
  googleDriveFileId      String
  googleDriveWebViewLink String
  mirroredObjectStoreUrl String?
  durationSeconds        Int?

  lesson    Lesson    @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  mirrorJob MirrorJob?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([lessonId])
  @@index([googleDriveFileId])
}

enum MirrorJobStatus {
  queued
  processing
  done
  failed
}

model MirrorJob {
  id           String          @id @default(cuid())
  mediaAssetId String          @unique
  status       MirrorJobStatus @default(queued)
  attempts     Int             @default(0)
  lastError    String?

  mediaAsset MediaAsset @relation(fields: [mediaAssetId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status, createdAt])
}

model PlayerAccessToken {
  id        String    @id @default(cuid())
  playerId  String
  tokenHash String
  createdAt DateTime  @default(now())
  revokedAt DateTime?

  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@index([playerId])
  @@index([revokedAt])
}


